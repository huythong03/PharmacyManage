@{
    ViewData["Title"] = "Thêm Vai Trò Mới - PharmacyWeb";
}

<h2>Thêm Vai Trò Mới</h2>

<form asp-action="CreateRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Tên Vai Trò</label>
        <input name="roleName" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Tạo" class="btn btn-primary" />
        <a asp-action="Roles" class="btn btn-secondary">Quay Lại</a>
    </div>
</form>
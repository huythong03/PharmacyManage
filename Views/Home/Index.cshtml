@{
    ViewData["Title"] = "Trang Chủ - PharmacyWeb";
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="home-container animate__animated animate__fadeIn text-center">
        <div class="card border-0 shadow-lg" style="background: #ffffff; border-radius: 20px; max-width: 900px; width: 100%;">
            <div class="card-body p-5">
                <div class="mb-4">
                    <h1 class="fw-bold text-success" style="font-size: 2.8rem; letter-spacing: 2px;">Chào Mừng Đến Với PharmacyWeb</h1>
                    <p class="lead text-muted mt-3" style="font-size: 1.3rem;">Chăm sóc sức khỏe dễ dàng hơn bao giờ hết</p>
                </div>

                <div class="d-flex justify-content-center gap-4 flex-wrap">
                    @if (User.Identity.IsAuthenticated)
                    {
						@if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Medicine" asp-action="Index" class="btn btn-success btn-lg py-3 px-5 fw-bold ripple-effect" style="background: linear-gradient(135deg, #34c759, #22d3ee); border-radius: 15px;">Quản Lý Thuốc</a>
                        }
                        else {
                            <a asp-controller="Shop" asp-action="Index" class="btn btn-success btn-lg py-3 px-5 fw-bold ripple-effect" style="background: linear-gradient(135deg, #34c759, #22d3ee); border-radius: 15px;">Xem thuốc</a>
                            <a asp-controller="Shop" asp-action="Cart" class="btn btn-outline-success btn-lg py-3 px-5 fw-bold" style="border-radius: 15px;">Giỏ Hàng</a>
                        }
                    }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success btn-lg py-3 px-5 fw-bold ripple-effect" style="background: linear-gradient(135deg, #34c759, #22d3ee); border-radius: 15px;">Đăng Nhập</a>
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-success btn-lg py-3 px-5 fw-bold" style="border-radius: 15px;">Đăng Ký</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
@* </div> *@

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
        }

        .home-container {
            max-width: 1000px;
            width: 100%;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }

        .btn-success, .btn-outline-success {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .btn-success:hover, .btn-outline-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(52, 199, 89, 0.4);
            }

        .ripple-effect::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            animation: ripple 0.8s linear;
        }

        @@keyframes ripple {
            to {
                width: 300px;
                height: 300px;
                opacity: 0;
            }
        }

        @@keyframes bounceIn {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            60% {
                transform: scale(1.2);
                opacity: 1;
            }

            100% {
                transform: scale(1);
            }
        }

        .text-success {
            color: #34c759 !important;
        }
    </style>
    <script>
        document.querySelectorAll('.ripple-effect').forEach(btn => {
            btn.addEventListener('click', function (e) {
                this.classList.add('ripple-effect');
                setTimeout(() => this.classList.remove('ripple-effect'), 800);
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <div id="particles-js" class="position-absolute top-0 start-0 w-100 h-100" style="z-index: -1;"></div>
    <script src="~/js/particles-config.js" asp-append-version="true"></script>
}
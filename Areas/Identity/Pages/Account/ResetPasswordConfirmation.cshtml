@page
@model ResetPasswordConfirmationModel

@{
    ViewData["Title"] = "Xác Nhận Đặt Lại Mật Khẩu - PharmacyWeb";
}

<div class="container-fluid min-vh-100 position-relative overflow-hidden" style="background: linear-gradient(135deg, #0d1b2a, #1b263b);">
    <div id="particles-js" class="position-absolute top-0 start-0 w-100 h-100"></div>
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="confirmation-container animate__animated animate__fadeInUp">
            <div class="card border-0 shadow-lg" style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border-radius: 20px;">
                <div class="card-body p-5 text-white">
                    <div class="text-center mb-5">
                        <h1 class="fw-bold" style="font-size: 2.5rem; letter-spacing: 3px; color: #fff; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Hoàn Tất</h1>
                        <p class="text-light opacity-75">Mật khẩu của bạn đã được đặt lại thành công.</p>
                    </div>
                    <div class="text-center">
                        <p class="text-light opacity-75 mb-0"><a asp-page="./Login" class="text-white fw-bold">Đăng Nhập Ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="~/js/particles-config.js" asp-append-version="true"></script>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
        }

        .confirmation-container {
            max-width: 450px;
            width: 100%;
        }

        .card {
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
}
@page
@model RegisterModel

@{
    ViewData["Title"] = "Đăng Ký - PharmacyWeb";
}

<div id="particles-js" class="position-absolute top-0 start-0 w-100 h-100"></div>
<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="register-container animate__animated animate__fadeInUp">
        <div class="card border-0 shadow-lg" style="background: linear-gradient(90deg, rgba(79, 70, 229, 0.85), rgba(59, 130, 246, 0.85)); backdrop-filter: blur(10px); border-radius: 20px; border: 1px solid rgba(255, 255, 255, 0.3);">
            <div class="card-body p-5 text-white">
                <div class="text-center mb-5">
                    <h1 class="fw-bold" style="font-size: 2.8rem; letter-spacing: 3px; color: #fff; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">PharmacyWeb</h1>
                    <p class="text-light opacity-75">Tạo tài khoản để khám phá ngay</p>
                </div>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center fw-bold"></div>
                    <div class="input-group mb-4 position-relative">
                        <span class="input-group-text bg-transparent border-0 text-light"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Input.Email" class="form-control form-control-lg border-0 shadow-sm" placeholder="Email" style="background: rgba(255, 255, 255, 0.2); color: #fff; border-radius: 30px; padding-left: 50px;" />
                        <span asp-validation-for="Input.Email" class="text-danger position-absolute" style="bottom: -20px; left: 40px;"></span>
                    </div>
                    <div class="input-group mb-4 position-relative">
                        <span class="input-group-text bg-transparent border-0 text-light"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.Password" class="form-control form-control-lg border-0 shadow-sm" placeholder="Mật Khẩu" style="background: rgba(255, 255, 255, 0.2); color: #fff; border-radius: 30px; padding-left: 50px;" />
                        <span asp-validation-for="Input.Password" class="text-danger position-absolute" style="bottom: -20px; left: 40px;"></span>
                    </div>
                    <div class="input-group mb-4 position-relative">
                        <span class="input-group-text bg-transparent border-0 text-light"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg border-0 shadow-sm" placeholder="Xác Nhận Mật Khẩu" style="background: rgba(255, 255, 255, 0.2); color: #fff; border-radius: 30px; padding-left: 50px;" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger position-absolute" style="bottom: -20px; left: 40px;"></span>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg w-100 py-3 fw-bold ripple-effect" style="background: linear-gradient(135deg, #2a9d8f, #48cae4); border-radius: 30px;">Đăng Ký</button>
                </form>
                <div class="text-center mt-4">
                    <p class="text-light opacity-75 mb-0">Đã có tài khoản? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-white fw-bold">Đăng Nhập</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="~/js/particles-config.js" asp-append-version="true"></script>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #0d1b2a, #1b263b);
        }

        .register-container {
            max-width: 480px;
            width: 100%;
        }

        .card {
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .form-control {
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.3);
                box-shadow: 0 0 20px rgba(42, 157, 143, 0.5);
                color: #fff;
            }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .btn-success {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(42, 157, 143, 0.5);
            }

        .ripple-effect::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            animation: ripple 0.6s linear;
        }

        @@keyframes ripple {
            to {
                width: 300px;
                height: 300px;
                opacity: 0;
            }
        }
    </style>
    <script>
        document.querySelector('.ripple-effect').addEventListener('click', function (e) {
            this.classList.add('ripple-effect');
            setTimeout(() => this.classList.remove('ripple-effect'), 600);
        });
    </script>
}
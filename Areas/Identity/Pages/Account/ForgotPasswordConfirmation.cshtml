@page
@model ForgotPasswordConfirmationModel

@{
    ViewData["Title"] = "Xác Nhận Quên Mật Khẩu - PharmacyWeb";
}

<div id="particles-js" class="position-absolute top-0 start-0 w-100 h-100"></div>
<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="confirmation-container animate__animated animate__fadeInUp">
        <div class="card border-0 shadow-lg" style="background: linear-gradient(90deg, rgba(79, 70, 229, 0.85), rgba(59, 130, 246, 0.85)); backdrop-filter: blur(10px); border-radius: 20px; border: 1px solid rgba(255, 255, 255, 0.3);">
            <div class="card-body p-5 text-white">
                <div class="text-center mb-5">
                    <h1 class="fw-bold" style="font-size: 2.5rem; letter-spacing: 3px; color: #fff; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);">Xác Nhận</h1>
                    <p class="text-light opacity-75">Chúng tôi đã gửi liên kết đặt lại mật khẩu đến email của bạn.</p>
                </div>
                <div class="text-center">
                    <p class="text-light opacity-75 mb-4">Vui lòng kiểm tra email và làm theo hướng dẫn.</p>
                    <a asp-page="./Login" class="btn btn-primary btn-lg w-100 py-3 fw-bold ripple-effect" style="background: linear-gradient(135deg, #415a77, #778da9); border-radius: 30px; display: inline-block; text-decoration: none; color: #fff;">Quay Lại Đăng Nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="~/js/particles-config.js" asp-append-version="true"></script>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #0d1b2a, #1b263b);
        }

        .confirmation-container {
            max-width: 450px;
            width: 100%;
        }

        .card {
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .btn-primary {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(65, 90, 119, 0.5);
            }

        .ripple-effect::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            animation: ripple 0.6s linear;
        }

        @@keyframes ripple {
            to {
                width: 300px;
                height: 300px;
                opacity: 0;
            }
        }
    </style>
    <script>
        document.querySelector('.ripple-effect').addEventListener('click', function (e) {
            this.classList.add('ripple-effect');
            setTimeout(() => this.classList.remove('ripple-effect'), 600);
        });
    </script>
}